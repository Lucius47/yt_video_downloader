<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Name="pnlMainGrid" MouseUp="PnlMainGrid_MouseUp" Background="LightBlue">
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="72">
            YTDOWN!
        </TextBlock>
        <TextBlock Name="DownloadProgress" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="30" Margin="0 100 0 0">
            69%
        </TextBlock>
        <TextBox Name="linkTextBox" HorizontalAlignment="Center" Height="100" TextWrapping="Wrap" Text="Link" VerticalAlignment="Center" Width="400"/>
        <Button Content="Download" HorizontalAlignment="Center" Click="Button_Click" Width="100" Height="30" VerticalAlignment="Bottom" Margin="0 0 0 20"/>
    </Grid>
</Window>
